<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!-- Definition for Pick List Action-->

<action-definition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   id="spar.hybris.cockpitng.listview.action.export.csv"
                   xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/action-definition.xsd">
    <name>Pick List Export To CSV Action</name>
    <description>
        Action providing implementation of List View to CSV export. It exports All of the visible columns of the List
        View that have text representation.
    </description>
    <author>Rohan_C</author>
    <version>1.0</version>
    <actionClassName>com.spar.hcl.widgets.listview.actions.export.csv.SparPickListAction</actionClassName>
    <inputType>java.util.Map</inputType>
    <iconUri>icons/icon_action_export_csv_default.png</iconUri>
    <iconDisabledUri>icons/icon_action_export_csv_disabled.png</iconDisabledUri>
    <iconHoverUri>icons/icon_action_export_csv_hover.png</iconHoverUri>
    <settings>
        <setting key="confirmation.threshold" default-value="500" type="java.lang.Integer"/>
    </settings>
</action-definition>
